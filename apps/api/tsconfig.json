{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src", "prisma"]
}

